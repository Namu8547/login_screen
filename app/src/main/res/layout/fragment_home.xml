    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".HomeActivity"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Hello, Dhwani"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"

                />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/allSongsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:layout_marginRight="8dp"
                        />

                    <Button
                        android:id="@+id/artistButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artist"
                        android:layout_marginRight="8dp"/>
                    <Button
                        android:id="@+id/hotTrackButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hot Tracks"
                        android:layout_marginRight="8dp"/>
                    <Button
                        android:id="@+id/podcastButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Podcast" />


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="New songs"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/song_card_view"
                android:layout_marginVertical="5dp"
                />





        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>










